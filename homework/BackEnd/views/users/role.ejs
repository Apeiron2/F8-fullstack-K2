<h1>Phân quyền</h1>
<p class="mb-3">Username: <%= user.name %></p>
<p class="mb-3">Email: <%= user.email %></p>
<form action="" method="post" class="mb-3">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th><input type="checkbox" disabled /></th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% rolesAll.forEach((role) => { const
      isChecked=rolesUser.find(item=>item.id==role.id) %>
      <tr>
        <td>
          <input type="checkbox" name="roles" value="<%= role.id %>" <%=
          isChecked?'checked':'' %>/>
        </td>
        <td><%= role.name %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <button class="btn btn-primary">Lưu thay đổi</button>
  <a href="/users" class="btn btn-danger">Quay lại</a>
</form>

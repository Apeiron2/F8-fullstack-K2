<div class="container">
  <a href="/users" class="btn btn-outline-primary"><span>Home</span></a>
  <h1 class="my-3">Mindmaps user <%= userId %></h1>
  <a href="/users" class="btn btn-success mb-3"><span>+ New Mindmap</span></a>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>STT</th>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Private</th>
        <th>Details</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% mindmaps.forEach((mindmap,index) => { %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= mindmap.id %></td>
        <td><%= mindmap.title %></td>
        <td><%= mindmap.description %></td>

        <td>
          <input type="checkbox" name="private" <%= mindmap.private?"checked":""
          %>>
        </td>
        <td>
          <a href="#">link</a>
        </td>

        <td><%= moment(mindmap.created_at).format('DD/MM/YYYY HH:MM') %></td>
        <td><%= moment(mindmap.updated_at).format('DD/MM/YYYY HH:MM') %></td>
        <td>
          <button class="btn btn-warning d-inline">
            <i class="fa-regular fa-pen-to-square"></i>
          </button>
        </td>
        <td>
          <button class="btn btn-danger d-inline">
            <i class="fa-regular fa-trash-can"></i>
          </button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
